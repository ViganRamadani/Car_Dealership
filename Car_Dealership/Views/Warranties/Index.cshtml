@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> _signInManager;
@model IEnumerable<Car_Dealership.Models.Warranty>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<h1>Index</h1>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach (var item in Model)
{


<div class="card mb-4 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal"> @Html.DisplayFor(modelItem => item.warrantyName)</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title pricing-card-title"> @Html.DisplayFor(modelItem => item.warrantyYears)<small class="text-muted">Years</small></h1>
            <ul class="list-unstyled mt-3 mb-4">
                <li> @Html.DisplayFor(modelItem => item.warrantyCoverage)</li>
               
            </ul>
            <button type="button" class="btn btn-lg btn-block btn-outline-primary">Sign up for free</button>
        </div>
    </div>      }
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.warrantyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.warrantyYears)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.warrantyCoverage)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.warrantyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.warrantyYears)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.warrantyCoverage)
                    </td>
                    <td>

                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        @if (_signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
