@model IEnumerable<Car_Dealership.Models.Warranty>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<h1>Index</h1>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.warrantyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.warrantyYears)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.warrantyCoverage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.warrantyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.warrantyYears)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.warrantyCoverage)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
